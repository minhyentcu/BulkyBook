@model IEnumerable<BulkyBook.Models.Product> 
@{ 
    Layout = "_Layout";
}
    <div class="row pb-3 ">

        @foreach (var item in Model)
        {
            <div class=" col-lg-3 col-md6">
                <div class="row p-2">
                    <div class="col-12 p-1 " style="border:1px solid #008cba;border-radius:5px">
                        <div class="card" style="border:0px;">
                            <img class="card-img-top rounded" src="@item.ImageUrl" />
                            <div class="pl-1">
                                <p class="card-title h5"><b style="color:#2c3e50">@item.Title</b></p>
                                <p class="card-title text-primary">by<b>@item.Author</b></p>
                            </div>
                            <div style="padding-left:5px">
                                <p>List Price: <strike><b class="">$ @item.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div style="padding-left:5px">
                                <p style="color:maroon">As low as: <b class="">$ @item.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>